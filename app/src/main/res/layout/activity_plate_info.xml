<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plate_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.PlateInfoActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plate_861aa7bf"
        android:layout_weight="8"
        android:id="@+id/plate_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plate_name"
            android:layout_margin="16dp"
            android:text="Pechugas de Pollo Asadas con Salsa de Maíz"
            android:textColor="@android:color/black"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Ingredientes:"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plate_ingredients"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="[Pollo,Limón...]"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/plate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:text="9.50 €"/>

    </LinearLayout>

</LinearLayout>
